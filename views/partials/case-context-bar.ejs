<!-- Case Context Bar -->
<div class="case-context-bar" id="caseContextBar">
    <div class="case-context-content">
        <div class="case-context-header">
            <h2 class="case-context-title">Case Context</h2>
            <button class="case-context-toggle" id="caseContextToggle">
                <span class="case-context-toggle-text">Collapse</span>
                <svg class="icon" viewBox="0 0 24 24">
                    <path d="M7.41 15.41L12 10.83l4.59 4.58L18 14l-6-6-6 6z"/>
                </svg>
            </button>
        </div>
        <div class="case-context-details" id="caseContextDetails">
            <div class="case-context-section">
                <div class="case-detail-row">
                    <span class="case-detail-label">Case ID</span>
                    <span class="case-detail-value" id="caseId"></span>
                    <span class="case-detail-label case-date-label">Date</span>
                    <span class="case-detail-value" id="caseDate"></span>
                </div>
                <div class="case-detail-row">
                    <span class="case-detail-label">Investigator</span>
                    <span class="case-detail-value" id="investigatorName"></span>
                </div>
            </div>
            <div class="case-context-section">
                <div class="case-detail-row">
                    <span class="case-detail-label">Student</span>
                    <span class="case-detail-value" id="studentName"></span>
                    <span class="case-detail-label case-date-label">Grade</span>
                    <span class="case-detail-value" id="studentGrade"></span>
                </div>
                <div class="case-detail-row">
                    <span class="case-detail-label">SOC Status</span>
                    <span class="case-detail-value" id="socStatus"></span>
                </div>
            </div>
        </div>
    </div>
</div>
